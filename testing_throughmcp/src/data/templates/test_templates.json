{
  "test_case_templates": [
    {
      "template_id": "api_endpoint_test",
      "name": "API Endpoint Test Template",
      "description": "Template for testing REST API endpoints",
      "test_structure": {
        "setup": [
          "initialize_test_client",
          "prepare_test_data",
          "set_authentication_headers"
        ],
        "execution": [
          "send_http_request",
          "capture_response_time",
          "log_request_response"
        ],
        "validation": [
          "verify_response_status",
          "validate_response_schema",
          "check_response_data",
          "verify_performance_metrics"
        ],
        "cleanup": [
          "cleanup_test_data",
          "reset_test_environment"
        ]
      },
      "assertions": [
        "status_code_equals",
        "response_time_under_threshold",
        "response_contains_required_fields",
        "data_integrity_maintained"
      ]
    },
    {
      "template_id": "ui_workflow_test",
      "name": "UI Workflow Test Template", 
      "description": "Template for testing user interface workflows",
      "test_structure": {
        "setup": [
          "launch_browser",
          "navigate_to_application",
          "perform_user_login"
        ],
        "execution": [
          "execute_ui_steps",
          "capture_screenshots",
          "handle_dynamic_elements"
        ],
        "validation": [
          "verify_ui_elements_present",
          "validate_data_displayed",
          "check_workflow_completion",
          "verify_error_handling"
        ],
        "cleanup": [
          "logout_user",
          "close_browser",
          "cleanup_test_data"
        ]
      },
      "ui_elements": [
        "buttons",
        "input_fields", 
        "dropdown_menus",
        "tables",
        "forms",
        "navigation_menus"
      ]
    },
    {
      "template_id": "performance_test",
      "name": "Performance Test Template",
      "description": "Template for performance and load testing",
      "test_structure": {
        "setup": [
          "configure_load_parameters",
          "prepare_test_data_sets",
          "initialize_monitoring"
        ],
        "execution": [
          "ramp_up_virtual_users",
          "execute_load_scenario",
          "monitor_system_metrics",
          "collect_performance_data"
        ],
        "validation": [
          "verify_response_times",
          "check_throughput_targets",
          "validate_error_rates",
          "assess_resource_utilization"
        ],
        "cleanup": [
          "ramp_down_load",
          "generate_performance_report",
          "cleanup_test_environment"
        ]
      },
      "metrics": [
        "response_time",
        "throughput",
        "error_rate", 
        "cpu_utilization",
        "memory_usage",
        "database_connections"
      ]
    },
    {
      "template_id": "security_test",
      "name": "Security Test Template",
      "description": "Template for security and vulnerability testing",
      "test_structure": {
        "setup": [
          "configure_security_tools",
          "prepare_attack_scenarios",
          "set_security_baselines"
        ],
        "execution": [
          "execute_vulnerability_scans",
          "test_authentication_mechanisms",
          "validate_authorization_controls",
          "test_input_validation"
        ],
        "validation": [
          "verify_security_controls",
          "check_vulnerability_status",
          "validate_encryption_standards",
          "assess_compliance_requirements"
        ],
        "cleanup": [
          "generate_security_report",
          "document_findings",
          "cleanup_security_artifacts"
        ]
      },
      "security_checks": [
        "sql_injection",
        "cross_site_scripting",
        "authentication_bypass",
        "privilege_escalation",
        "data_exposure",
        "session_management"
      ]
    }
  ],
  
  "test_data_templates": [
    {
      "template_id": "customer_test_data",
      "name": "Customer Test Data Set",
      "description": "Comprehensive customer data for testing",
      "data_categories": {
        "valid_customers": {
          "count": 50,
          "characteristics": ["verified_kyc", "good_credit", "active_accounts"]
        },
        "edge_case_customers": {
          "count": 20,
          "characteristics": ["poor_credit", "multiple_accounts", "complex_scenarios"]
        },
        "invalid_customers": {
          "count": 10,
          "characteristics": ["incomplete_data", "invalid_formats", "test_scenarios"]
        }
      }
    },
    {
      "template_id": "transaction_test_data",
      "name": "Transaction Test Data Set",
      "description": "Diverse transaction scenarios for testing",
      "data_categories": {
        "normal_transactions": {
          "count": 200,
          "types": ["deposits", "withdrawals", "transfers", "payments"]
        },
        "high_value_transactions": {
          "count": 50,
          "characteristics": ["large_amounts", "regulatory_reporting", "compliance_checks"]
        },
        "suspicious_transactions": {
          "count": 30,
          "characteristics": ["fraud_patterns", "unusual_behavior", "risk_scenarios"]
        }
      }
    }
  ],
  
  "test_environments": [
    {
      "environment_id": "dev",
      "name": "Development Environment",
      "description": "Development testing environment",
      "configuration": {
        "database_connection": "dev_banking_db",
        "api_base_url": "https://dev-api.bankingapp.com",
        "web_app_url": "https://dev.bankingapp.com",
        "mock_services": true,
        "debug_mode": true,
        "test_data_reset": "daily"
      }
    },
    {
      "environment_id": "staging", 
      "name": "Staging Environment",
      "description": "Pre-production staging environment",
      "configuration": {
        "database_connection": "staging_banking_db",
        "api_base_url": "https://staging-api.bankingapp.com",
        "web_app_url": "https://staging.bankingapp.com",
        "mock_services": false,
        "debug_mode": false,
        "test_data_reset": "weekly"
      }
    },
    {
      "environment_id": "prod",
      "name": "Production Environment", 
      "description": "Production environment (read-only tests)",
      "configuration": {
        "database_connection": "prod_banking_db_readonly",
        "api_base_url": "https://api.bankingapp.com",
        "web_app_url": "https://www.bankingapp.com",
        "mock_services": false,
        "debug_mode": false,
        "read_only": true,
        "monitoring_only": true
      }
    }
  ],
  
